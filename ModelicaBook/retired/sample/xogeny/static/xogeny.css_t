/*
 * @import url("basic.css");
 */
@import url("bootstrap.css");

/* This addressed the issue with the Bootstrap fixed nav bar */

body {
    padding-top: 80px;
}

/* Issues related to layout of the related divs */

div.related ul {
    margin: 0;
    padding: 0 0 0 10px;
    list-style: none;
}

div.related li {
    display: inline;
}

div.related li.right {
    float: right;
    margin-right: 5px;
}

/* This gives the relation divs a solid grey background */

div.related {
    /* background: #DDDDDD; */
    background: transparent;
}

/* Used to try and implement a fixed sidebar */

.sidebar-nav-fixed {position:fixed;top:80;right:0;left:0;z-index:1030;}

/* Math related stuff */
span.eqno {
    float: right;
}

div.body div.math p {
    text-align: center;
}

img.math {
    vertical-align: middle;
}

