/* Get rid of header links, unless you hover */

a.headerlink {
    visibility: hidden;
}

h1:hover > a.headerlink,
h2:hover > a.headerlink,
h3:hover > a.headerlink,
h4:hover > a.headerlink,
h5:hover > a.headerlink,
h6:hover > a.headerlink,
dt:hover > a.headerlink {
    visibility: visible;
}

.padded {
    margin: 10px;
}

.clearer {
    clear: both;
}

.footer {
    margin-left: 20px;
}

.section h1 {
    margin-bottom: 10px;
}

.navbar-inner .container-fluid {
    padding-top: 5px;
}

.highlight .hll {
